@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Section: Services -->
<section id="services" class="">
    <div class="container pb-40">
        <div class="section-title text-center">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <h2 class="text-uppercase mt-0 line-height-1">
                        @Model.Headers.ElementAt(0).Title
                    </h2>
                    <p>
                        @Model.Headers.ElementAt(0).Description
                    </p>
                </div>
            </div>
        </div>
        <div class="section-content">
            <div class="row">
                @foreach (Feature feature in Model.Features )
                {
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                        <div class="text-center mb-30 p-10">
                            <a href="#" class="">
                                <img src="~/assets/images/icons.png/@feature.Icon"
                                     width="70"
                                     alt="" />
                            </a>
                            <h4 class="font-weight-600 mt-20">@feature.Title</h4>
                            <p>
                                @feature.Description
                            </p>
                            <a class="btn btn-default btn-theme-colored btn-sm mt-10"
                               href="#">Read More</a>
                        </div>
                    </div>
                }



            </div>
        </div>
    </div>
</section>