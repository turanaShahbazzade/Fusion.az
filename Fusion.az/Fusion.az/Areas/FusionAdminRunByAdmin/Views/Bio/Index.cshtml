@model Bio
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bio Table</h4>
            
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Logo
                            </th>
                            <th>
                                Phone
                            </th>
                           
                            <th>
                               Mail
                            </th>
                            <th>
                                Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/images/@Model.Logo" alt="image" />
                            </td>
                            <td>
                                @Model.Phone
                            </td>

                            <td>
                                @Model.Mail
                            </td>
                            <td>
                                <a class="btn btn-orange" asp-controller="Bio" asp-action="Detail" asp-route-id="@Model.Id"> Detail </a>
                                <a class="btn btn-update" asp-controller="Bio" asp-action="Update"  asp-route-id="@Model.Id"> Update </a>
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

